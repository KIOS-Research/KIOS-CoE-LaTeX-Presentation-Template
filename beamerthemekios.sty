\mode<presentation>

% Requirement
\RequirePackage{tikz}

% Settings
\useinnertheme{kios}
\useoutertheme{kios}
\usecolortheme{kios}

% alert block colors

\setbeamertemplate{blocks}[rounded][shadow=true] 

